{
    "include": ["stories"],
    "compilerOptions": {
        "allowJs": true,
        "module": "esnext",
        "lib": ["dom", "esnext"],
        "importHelpers": true,
        "declaration": true,
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@": ["./"],
            "*": ["src/*", "node_modules/*"]
        },
        "jsx": "react",
        "esModuleInterop": true
    },
    "exclude": ["node_modules", "dist"]
}
