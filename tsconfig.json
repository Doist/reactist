{
    "extends": "@doist/tsconfig",
    "include": ["src", "types", "*.config.ts", "playwright"],
    "compilerOptions": {
        "allowJs": true,
        "module": "esnext",
        "lib": ["dom", "esnext"],
        "importHelpers": true,
        "declaration": true,
        "sourceMap": true,
        "rootDir": "./",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@": ["./"],
            "*": ["src/*", "node_modules/*"]
        },
        "jsx": "react",
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules", "dist"]
}
